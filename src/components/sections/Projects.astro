---
import GitHub from "@/components/icons/GitHub.astro";
import NextJS from "@/components/icons/NextJS.astro";
import Tailwind from "@/components/icons/Tailwind.astro";
import Link from "@/components/icons/Link.astro";
import Code from "@/components/icons/Code.astro"; // Import Code icon
import LinkButton from "@/components/ui/LinkButton.astro";
import Badge from "@/components/ui/Badge.astro";
import cvData from "@/data/cv_data.json";
const { projects: PROJECTS_DATA } = cvData;

type TagName = keyof typeof TAGS_LOOKUP;

const TAGS_LOOKUP = {
  "Next.js": {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  "Tailwind CSS": {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  Python: {
    name: "Python",
    class: "bg-[#3776AB] text-white",
    icon: Code,
  },
  PyTorch: {
    name: "PyTorch",
    class: "bg-[#EE4C2C] text-white",
    icon: Code,
  },
  TensorFlow: {
    name: "TensorFlow",
    class: "bg-[#FF6F00] text-white",
    icon: Code,
  },
  FastAPI: {
    name: "FastAPI",
    class: "bg-green-600 text-white",
    icon: Code,
  },
  "Google Cloud": {
    name: "Google Cloud",
    class: "bg-blue-500 text-white",
    icon: Code,
  },
  "Scikit-learn": {
    name: "Scikit-learn",
    class: "bg-[#F7931E] text-white",
    icon: Code,
  },
  XGBoost: {
    name: "XGBoost",
    class: "bg-[#DC143C] text-white",
    icon: Code,
  },
  "Machine Learning": {
    name: "Machine Learning",
    class: "bg-purple-600 text-white",
    icon: Code,
  },
  "Computer Vision": {
    name: "Computer Vision",
    class: "bg-indigo-600 text-white",
    icon: Code,
  },
  "Healthcare AI": {
    name: "Healthcare AI",
    class: "bg-teal-600 text-white",
    icon: Code,
  },
  Robotics: {
    name: "Robotics",
    class: "bg-slate-700 text-white",
    icon: Code,
  },
  Research: {
    name: "Research",
    class: "bg-amber-600 text-white",
    icon: Code,
  },
  "Neural Networks": {
    name: "Neural Networks",
    class: "bg-pink-600 text-white",
    icon: Code,
  },
};

const PROJECTS = PROJECTS_DATA.map((project) => ({
  ...project,
  image: `/${project.image}`, // Prepend slash if image paths in JSON are relative to root
  tags: project.tags
    .map((tagName) => TAGS_LOOKUP[tagName as TagName])
    .filter((tag) => tag), // Map tag names to tag objects
  inProgress: project.inProgress || false,
}));
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(
      ({ image, title, description, tags, link, github, inProgress }) => (
        <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0" data-project>
          <div class="w-full md:w-1/2">
            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
              <img
                alt={title}
                class="object-cover object-center w-full aspect-video h-auto transition duration-500 sm:h-56 md:scale-100 md:group-hover:scale-105"
                loading="lazy"
                src={image}
              />
            </div>
          </div>

          <div class="w-full md:w-1/2 md:max-w-lg">
            <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-3" data-project-title>
              {title}
            </h3>
            <div class="flex flex-wrap gap-2 mb-4">
              {inProgress && (
                <Badge class="bg-yellow-400/10 text-yellow-800 dark:bg-yellow-400/20 dark:text-yellow-200 text-xs" data-project-in-progress>
                  In Progress
                </Badge>
              )}
              {tags.map((tag) => (
                <span
                  class={`inline-flex items-center gap-1.5 rounded-lg text-xs font-medium ${tag.class} py-1.5 px-3 shadow-sm`}
                >
                  <tag.icon class="size-3.5" />
                  {tag.name}
                </span>
              ))}
            </div>

            <div class="text-gray-700 dark:text-gray-400 leading-relaxed" data-project-description>
              {description}
            </div>

            <footer class="flex items-end justify-start mt-6 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </article>
      )
    )
  }
</div>
