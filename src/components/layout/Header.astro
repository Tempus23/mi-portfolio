---
import ThemeToggle from "@/components/ui/ThemeToggle.astro"
import LanguageSwitcher from "@/components/ui/LanguageSwitcher.astro"
import cvData from "@/data/cv_data.json"
import cvDataEs from "@/data/cv_data_es.json"
import translations from "@/data/translations.json"

// This will be replaced by client-side script
const { basic_info } = cvData;
const navItems = [
  {
    titleEn: translations.en.nav.experience,
    titleEs: translations.es.nav.experience,
    label: "experience",
    url: "/mi-portfolio/#experience",
  },
  {
    titleEn: translations.en.nav.projects,
    titleEs: translations.es.nav.projects,
    label: "projects",
    url: "/mi-portfolio/#projects",
  },
  {
    titleEn: translations.en.nav.skills,
    titleEs: translations.es.nav.skills,
    label: "skills",
    url: "/mi-portfolio/#skills",
  },
  {
    titleEn: translations.en.nav.aboutMe,
    titleEs: translations.es.nav.aboutMe,
    label: "about-me",
    url: "/mi-portfolio/#about-me",
  },
  {
    titleEn: translations.en.nav.contact,
    titleEs: translations.es.nav.contact,
    label: "contact",
    url: `mailto:${basic_info.emails[0]}`,
  },
]
---

<header
  class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2"
>
  <nav
    class="flex px-3 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center"
  >
    {
      navItems.map((link) => (
        <a
          class="relative block px-2 py-2 transition hover:text-blue-500 dark:hover:text-blue-500"
          aria-label={link.label}
          href={link.url}
          data-text-en={link.titleEn}
          data-text-es={link.titleEs}
        >
          <span class="nav-text">{link.titleEn}</span>
        </a>
      ))
    }
    <LanguageSwitcher />
    <ThemeToggle />
  </nav>
</header>

<script>
  import { getLanguage } from '@/utils/languageStore';
  
  function updateNavLanguage() {
    const lang = getLanguage();
    const navLinks = document.querySelectorAll("header nav a");
    navLinks.forEach((link) => {
      const textSpan = link.querySelector('.nav-text');
      if (textSpan) {
        const textEn = link.getAttribute('data-text-en');
        const textEs = link.getAttribute('data-text-es');
        textSpan.textContent = lang === 'es' ? textEs : textEn;
      }
    });
  }

  document.addEventListener("astro:page-load", () => {
    updateNavLanguage();
    
    const sections = document.querySelectorAll("section")
    const navItems = document.querySelectorAll("header nav a")

    const callback = (entries: any[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("text-blue-500")
            } else {
              item.classList.remove("text-blue-500")
            }
          })
        }
      })
    }

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    })

    sections.forEach((section) => {
      observer.observe(section)
    })

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect()
      } else {
        sections.forEach((section) => {
          observer.observe(section)
        })
      }
    }
  })
</script>

<style>
  nav {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  nav {
    @apply dark:bg-gray-800/90 bg-white/50;
  }

  @keyframes nav-shadown {
    0% {
      @apply dark:bg-gray-800/0 bg-white/0;
    }
    to {
      @apply shadow-lg ring-1 backdrop-blur ring-white/10;
    }
  }
</style>
